@page
@model IndexModel
@{
    ViewData["Title"] = "Landing Page";
}

<!-- Title at the top -->
<div class="container mt-5">
    <div class="text-center">
        <h1>Welcome to Portfolio Devblog</h1>
    </div>
</div>

<!-- Cards centered below the title -->
<div class="container d-flex justify-content-center align-items-center" style="height: 70vh;">
    <div class="row w-100">
        <div class="col-md-4 d-flex justify-content-center">
            <div class="card text-center bg-dark text-light" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Blog</h5>
                    <p class="card-text">Explore all our blog posts here.</p>
                    <a asp-page="/Blog" class="btn btn-primary">Go to Blog</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 d-flex justify-content-center">
            <div class="card text-center bg-dark text-light" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Editor</h5>
                    <p class="card-text">Create blog or portfolio posts.</p>
                    <a asp-page="Privileged/CreatePost" class="btn btn-warning">Go to Editor</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 d-flex justify-content-center">
            <div class="card text-center bg-dark text-light" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Portfolio</h5>
                    <p class="card-text">Check out our portfolio projects.</p>
                    <a asp-page="/Portfolio" class="btn btn-secondary">Go to Portfolio</a>
                </div>
            </div>
        </div>
    </div>
</div>
