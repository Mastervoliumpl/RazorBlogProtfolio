@page
@model BlogModel
@{
    ViewData["Title"] = "Blog";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Our Blog Posts</h1>
    <div class="row">
        @foreach (var post in Model.BlogPosts)
        {
            <div class="col-md-4 mb-4 d-flex justify-content-center">
                <div class="card bg-dark text-light" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">@post.BodyText.Substring(0, Math.Min(post.BodyText.Length, 100))...</p>
                        <a asp-page="/BlogPostDetails" asp-route-id="@post.PostID" class="btn btn-outline-primary">Read More</a>
                        <p class="card-text mt-2">Posted on: @post.DateCreated.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
